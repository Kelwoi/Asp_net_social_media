@model Friendship

<div class="side-list-item">
    <a>
        <img src="@(Model.Friend.profilePicture ?? "~/images/avatar/defavar.png")" class="w-9 h-9 rounded-full" />
    </a>
    <div class="flex-1">
        <a><h4 class="side-list-title">@Model.Friend.Fullname</h4></a>
        <div class="side-list-info">@Model.Friend.Friendships.Count</div>
    </div>
    <form asp-controller="Home" asp-action="ToggleFriend">
        <input type="hidden" name="FriendId" value="@Model.Friend.Id" />
        <button type="submit" class="button bg-primary-soft text-primary">Unfriend</button>
    </form>
</div>
